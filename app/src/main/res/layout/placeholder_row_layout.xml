<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <View
        android:id="@+id/v_shimmer_image"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/mediumGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_shimmer_title"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/mediumGray"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/v_shimmer_image"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_shimmer_description"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginTop="12dp"
        android:background="@color/mediumGray"
        app:layout_constraintEnd_toEndOf="@+id/v_shimmer_title"
        app:layout_constraintStart_toStartOf="@+id/v_shimmer_title"
        app:layout_constraintTop_toBottomOf="@+id/v_shimmer_title" />


    <View
        android:id="@+id/v_shimmer_heart"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@color/mediumGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/v_shimmer_description"
        app:layout_constraintTop_toBottomOf="@+id/v_shimmer_description" />

    <View
        android:id="@+id/v_shimmer_clock"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:background="@color/mediumGray"
        app:layout_constraintBottom_toBottomOf="@+id/v_shimmer_heart"
        app:layout_constraintStart_toEndOf="@+id/v_shimmer_heart"
        app:layout_constraintTop_toTopOf="@+id/v_shimmer_heart" />

    <View
        android:id="@+id/v_shimmer_leaf"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:background="@color/mediumGray"
        app:layout_constraintBottom_toBottomOf="@+id/v_shimmer_clock"
        app:layout_constraintStart_toEndOf="@+id/v_shimmer_clock"
        app:layout_constraintTop_toTopOf="@+id/v_shimmer_clock" />


</androidx.constraintlayout.widget.ConstraintLayout>